@model List<CustomerActiveDetails>

<h1 class="mb-4">Customer List</h1>

<div class="row mb-4">
    <div class="col text-right">
        <a class="btn btn-primary" asp-controller="Home" asp-action="CreateNewCustomer">New Customer</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Customer Name</th>
                <th>Software Name</th>
                <th>Database</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Report Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.id</td>
                    <td>@entry.client_name</td>
                    <td>@entry.software_name</td>
                    <td>@entry.db_name</td>
                    <td>@entry.start_date.ToShortDateString()</td>
                    <td>@entry.end_date.ToShortDateString()</td>
                    <td>@entry.print_report</td>
                    <td>@entry.isactive.ToString()</td>
                    <td style="white-space:nowrap">
                        <a class="btn btn-primary btn-sm mb-1" asp-controller="Home" asp-action="CustomerDetailsEdit" asp-route-id="@entry.id">Edit</a>
                        <a class="btn btn-danger btn-sm mb-1" asp-controller="Entry" asp-action="Delete" asp-route-id="@entry.id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

